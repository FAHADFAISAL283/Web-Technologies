      <div class="row">
        <% products.forEach(product => { %>
          <div class="col-md-4">
            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text">$<%= product.price %></p>
                <a href="/products/<%= product._id %>" class="btn btn-primary">View Product</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
